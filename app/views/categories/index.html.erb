<!-- app/views/categories/index.html.erb -->

<h1>Categories</h1>

<% @categories.each do |category| %>
  <div class="category-item">
    <h2><%= category.name %></h2>
    <img class="icon" src="<%= category.icon %>" alt="<%= category.name %>">
    <p>Total Amount: <%= category.category_transactions.sum(:amount) %></p>
    <%= link_to "View Transactions", category_transactions_path(category) %>
  </div>
<% end %>

<%= link_to "Add a New Category", new_category_path %>
